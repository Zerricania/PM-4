<Window x:Class="convertWPFApp.Views.CurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:convertWPFApp.Views"
        mc:Ignorable="d"
        Title="currencyWindow" Height="400" Width="350">
        
    <Grid>
        <TextBox Name="InputTextBox" Text="Input Value" Width="200" Height="30" Margin="10,50,10,0"></TextBox>
        <Label 
            Content="From" 
            Margin="50" 
            Padding="20 30"
            FontWeight="DemiBold"
            ></Label>
        <ComboBox Name="FromComboBox" Width="100" Height="30" Margin="110,70" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ComboBoxItem Content="Tenge"></ComboBoxItem>
            <ComboBoxItem Content="Dollar"></ComboBoxItem>
            <ComboBoxItem Content="Ruble"></ComboBoxItem>
        </ComboBox>
        <Label 
            Content="To" 
            Margin="50" 
            Padding="30 130"
            FontWeight="DemiBold"
        ></Label>
        <ComboBox Name="ToComboBox" Width="100" Height="30" Margin="110,170" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ComboBoxItem Content="Tenge"></ComboBoxItem>
            <ComboBoxItem Content="Dollar"></ComboBoxItem>
            <ComboBoxItem Content="Ruble"></ComboBoxItem>
        </ComboBox>
        <Button 
            Name="ConvertButton" 
            Content="Convert"
            FontWeight="Bold"
            Width="100" Height="30"
            Margin="10,250,10,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Click="ConvertButton_Click">
        </Button>
        <TextBox
            Name="ResultTextBlock"
            Text="Your result"
            Width="200" Height="30"
            Margin="10,300,10,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"></TextBox>
    </Grid>
</Window>
